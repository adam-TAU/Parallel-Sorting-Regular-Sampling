\#!/bin/bash

# compilation of the algorithms
g++ -g -lstdc++ -fopenmp -O3 -c assign/PSRS.cpp -o psrs.o -lm
g++ -g -lstdc++ -O3 -c assign/main.cpp -o main.o
g++ -g -lstdc++ -O3 -c assign/mergeKarrays.cpp -o merge.o
g++ -g -lstdc++ -O3 -fopenmp main.o psrs.o merge.o -o parsort -lm

gcc -std=c11 -O3 sort.c -o sort


# printing the outputs of the algorithms
echo -n "Regular Algorithm: "
./sort $1 $2 | head -n1

echo  -n "Parallel Algorithm: "
./parsort $1 $2 | head -n1


# cleaning
rm sort
rm parsort
rm psrs.o
rm main.o
rm merge.o
